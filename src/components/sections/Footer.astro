---
import { t } from '../../utils/i18n';
import { Image } from 'astro:assets';
import logoLight from '../../assets/logo.png';
import logoDark from '../../assets/logo_white.png';
import { name, linkedin_url, github_url } from '../../utils/me';

interface Props {
  lang: string | undefined;
}

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="py-8 bg-white dark:bg-neutral-dark border-t border-gray-100 dark:border-gray-800">
  <div class="max-w-container mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <a href={lang === 'de' ? '/de/' : '/'} class="block" aria-label="Homepage">
          <!-- Light mode logo (hidden in dark mode) -->
          <Image src={logoLight} alt={name + " Logo"} class="h-7 w-auto dark:hidden transition-opacity duration-300" />

          <!-- Dark mode logo (hidden in light mode) -->
          <Image src={logoDark} alt={name + " Logo"} class="h-7 w-auto hidden dark:block transition-opacity duration-300" />
        </a>
      </div>

      <div class="text-sm text-secondary/60 dark:text-white/60">
        &copy; {currentYear} {name}. {t('footer.copyright', lang)}
      </div>

      <div class="mt-4 md:mt-0 flex items-center space-x-6">
        {/* LinkedIn Icon - aria-label already present */}
        <a
          href={linkedin_url}
          target="_blank"
          rel="noopener noreferrer"
          class="text-secondary/70 dark:text-white/70 hover:text-primary dark:hover:text-primary transition-colors duration-300"
          aria-label="LinkedIn"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" role="img" aria-labelledby="linkedinFooterIconTitle">
            <title id="linkedinFooterIconTitle">LinkedIn Profile</title>
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect width="4" height="12" x="2" y="9"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
        </a>
        {/* GitHub Icon - aria-label already present */}
        <a
          href={github_url}
          target="_blank"
          rel="noopener noreferrer"
          class="text-secondary/70 dark:text-white/70 hover:text-primary dark:hover:text-primary transition-colors duration-300"
          aria-label="GitHub"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" role="img" aria-labelledby="githubFooterIconTitle">
            <title id="githubFooterIconTitle">GitHub Profile</title>
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
            <path d="M9 18c-4.51 2-5-2-7-2"></path>
          </svg>
        </a>
      </div>
    </div>

    <div class="mt-6 pt-6 border-t border-gray-100 dark:border-gray-800 text-xs text-center text-secondary/60 dark:text-white/60">
      <nav class="flex flex-wrap justify-center gap-x-6 gap-y-2">
        {lang === 'de' ? (
          <>
            <a href="/de/imprint/" class="hover:text-primary transition-colors duration-300">{t('footer.imprint', lang)}</a>
            <a href="/de/privacy-policy/" class="hover:text-primary transition-colors duration-300">{t('footer.privacyPolicy', lang)}</a>
          </>
        ) : (
          <>
            <a href="/impressum/" class="hover:text-primary transition-colors duration-300">{t('footer.imprint', lang)}</a>
            <a href="/datenschutz/" class="hover:text-primary transition-colors duration-300">{t('footer.privacyPolicy', lang)}</a>
          </>
        )}
      </nav>
    </div>
  </div>
</footer>
